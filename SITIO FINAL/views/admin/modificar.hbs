<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h3>Modificar una Novedad</h3>
            <form method="post" action="/admin/novedades/modificar">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group">
                    <input type="text" placeholder="Titulo" value="{{novedad.titulo}}" class="form-group"
                        name="titulo">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Subtitulo"
                        name="subtitulo">{{novedad.subtitulo}}</textarea>
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Cuerpo"
                        name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>